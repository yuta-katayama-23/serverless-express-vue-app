{
	"name": "serverless-express-vue-app",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build:local": "NODE_ENV=local vite build",
		"build": "vite build",
		"preview": "vite preview",
		"express": "nodemon srv/app.local.js",
		"sls:dev": "sls offline start --host 0.0.0.0",
		"sls:debug": "SLS_DEBUG=* && node --inspect node_modules/serverless/bin/serverless offline start  --host 0.0.0.0",
		"sls:package": "sls package --stage production",
		"sls:deploy": "sls deploy --stage production",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
		"style": "prettier --ignore-unknown --write .",
		"ncu": "npm-check-updates",
		"prepare": "npx simple-git-hooks"
	},
	"dependencies": {
		"@vendia/serverless-express": "^4.10.3",
		"app-root-path": "^3.1.0",
		"chalk": "^5.2.0",
		"express": "^4.18.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@mdi/font": "^7.2.96",
		"@rushstack/eslint-patch": "^1.2.0",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vue/eslint-config-prettier": "^7.1.0",
		"axios": "^1.4.0",
		"axios-retry": "^3.4.0",
		"camelcase-keys": "^8.0.2",
		"eslint": "^8.40.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-custom-alias": "^1.3.2",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-vue": "^9.12.0",
		"eslint-plugin-vuetify": "^2.0.0-beta.4",
		"license-checker": "^25.0.1",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.22",
		"npm-check-updates": "^16.10.12",
		"pinia": "^2.0.36",
		"prettier": "^2.8.8",
		"sass": "^1.62.1",
		"serverless": "^3.30.1",
		"serverless-offline": "^12.0.4",
		"simple-git-hooks": "^2.8.1",
		"snakecase-keys": "^5.4.5",
		"vite": "^4.3.5",
		"vite-plugin-eslint": "^1.8.1",
		"vite-plugin-node-polyfills": "^0.8.2",
		"vite-plugin-vuetify": "^1.0.2",
		"vue": "^3.3.2",
		"vue-i18n": "^9.2.2",
		"vue-router": "^4.2.0",
		"vuetify": "^3.2.4",
		"webfontloader": "^1.6.28"
	},
	"lint-staged": {
		"*": "npx prettier --ignore-unknown --write",
		"*.vue|*.js|*.cjs|*.mjs": "npx eslint --ignore-path .gitignore",
		"./yarn.lock": "npx license-checker --development --failOn \"GPL;AGPL;LGPL;NGPL\" --summary",
		"./functions/yarn.lock": "npx license-checker --start ./functions --production --failOn \"GPL;AGPL;LGPL;NGPL\" --summary"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged --verbose",
		"commit-msg": "npx commitlint -e"
	}
}
