{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		"group:allNonMajor",
		":separateMultipleMajorReleases",
		"schedule:earlyMondays",
		"schedule:automergeDaily",
		":prConcurrentLimitNone",
		":prHourlyLimitNone",
		":timezone(Asia/Tokyo)"
	],
	"labels": ["renovate"],
	"enabledManagers": ["npm"],
	"major": { "labels": ["renovate", "update_major"] },
	"platformAutomerge": true,
	"packageRules": [
		{
			"description": "Automerge non-major updates",
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true
		},
		{
			"matchPackageNames": [
				"@aws-sdk/client-dynamodb",
				"@vendia/serverless-express",
				"app-root-path",
				"camelcase-keys",
				"chalk",
				"cli-table3",
				"compression",
				"config",
				"connect-dynamodb",
				"dotenv",
				"express",
				"express-cache-response-directive",
				"express-openapi-validator",
				"express-session",
				"helmet",
				"lodash",
				"luxon",
				"make-error",
				"mysql2",
				"openid-client",
				"sequelize",
				"snakecase-keys",

				"@commitlint/cli",
				"@commitlint/config-conventional",
				"@mdi/font",
				"@rushstack/eslint-patch",
				"@vitejs/plugin-vue",
				"@vue/eslint-config-prettier",
				"axios",
				"axios-retry",
				"eslint",
				"eslint-config-airbnb-base",
				"eslint-import-resolver-custom-alias",
				"eslint-plugin-import",
				"eslint-plugin-vue",
				"eslint-plugin-vuetify",
				"license-checker",
				"lint-staged",
				"nodemon",
				"npm-check-updates",
				"npm-run-all",
				"pinia",
				"prettier",
				"qs",
				"sass",
				"sequelize-auto",
				"serverless",
				"serverless-offline",
				"simple-git-hooks",
				"vite",
				"vite-plugin-eslint",
				"vite-plugin-node-polyfills",
				"vite-plugin-vuetify",
				"vue",
				"vue-i18n",
				"vue-router",
				"vuetify",
				"webfontloader"
			],
			"rangeStrategy": "bump"
		}
	],
	"ignoreDeps": [""]
}
